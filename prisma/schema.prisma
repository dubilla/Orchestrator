generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Orchestra {
  id             String          @id @default(uuid())
  name           String
  repositoryPath String
  githubRemote   String?
  wipLimit       Int             @default(2)
  status         OrchestraStatus @default(ACTIVE)
  lastSyncedAt   DateTime?
  lastSyncedHash String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  agents         Agent[]
  backlogItems   BacklogItem[]

  @@map("orchestras")
}

model Agent {
  id                   String       @id @default(uuid())
  orchestraId          String
  name                 String
  status               AgentStatus  @default(IDLE)
  currentBranch        String?
  currentBacklogItemId String?
  sessionId            String?
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt

  orchestra            Orchestra    @relation(fields: [orchestraId], references: [id], onDelete: Cascade)
  conversations        Conversation[]

  @@map("agents")
}

model BacklogItem {
  id              String            @id @default(uuid())
  orchestraId     String
  content         String
  description     String?           @db.Text
  status          BacklogItemStatus @default(QUEUED)
  branch          String?
  position        Int
  prUrl           String?
  prNumber        Int?
  retryCount      Int               @default(0)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  orchestra       Orchestra         @relation(fields: [orchestraId], references: [id], onDelete: Cascade)

  @@map("backlog_items")
}

model Conversation {
  id        String   @id @default(uuid())
  agentId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  messages  Message[]

  @@map("conversations")
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  role           MessageRole
  content        String       @db.Text
  metadata       Json?        // For tool calls, context, etc.
  createdAt      DateTime     @default(now())

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("messages")
}

enum OrchestraStatus {
  ACTIVE
  PAUSED
}

enum AgentStatus {
  IDLE
  WORKING
  PAUSED
  TERMINATED
}

enum BacklogItemStatus {
  QUEUED
  IN_PROGRESS
  WAITING
  PR_OPEN
  DONE
  FAILED
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}
